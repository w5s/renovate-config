{
  "name": "@w5s/renovate-config",
  "version": "1.0.0-alpha.0",
  "private": true,
  "description": "Renovate configuration presets",
  "keywords": [
    "renovate",
    "config",
    "dependencies"
  ],
  "homepage": "https://github.com/w5s/renovate-config/blob/main#readme",
  "bugs": {
    "url": "https://github.com/w5s/renovate-config.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w5s/renovate-config.git"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "scripts": {
    "build": "npm-run-all -p \"build:*\"",
    "build:empty": ":",
    "clean": ":",
    "code-analysis": ":",
    "cspell": "cspell",
    "develop": ":",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "eslint . --quiet --cache --fix --ext .js,.jsx,.ts,.tsx,.json",
    "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx,.json",
    "prepare": "npm-run-all -p \"prepare:*\"",
    "prepare:empty": ":",
    "prepare:husky": "is-ci || husky install",
    "release": ":",
    "rescue": "git clean -fdx;yarn install",
    "test": "npm-run-all -p 'test:*'",
    "test:renovate-config-schema": "ajv test -s test/schema.json -d base.json --valid",
    "test:renovate-config": "test/test.sh",
    "validate": "npm run build && npm run lint && npm test"
  },
  "commitlint": {
    "extends": [
      "@w5s/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.json": [
      "eslint"
    ],
    "*.*": [
      "cspell --no-must-find-files"
    ],
    "*.js?(x)": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@w5s/eslint-config/es",
      "@w5s/eslint-config/json"
    ],
    "root": true
  },
  "eslintIgnore": [
    "lib/",
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    "**/tsconfig.json",
    ".vscode/**",
    "public/"
  ],
  "devDependencies": {
    "@babel/core": "7.18.5",
    "@babel/eslint-parser": "7.18.2",
    "@commitlint/cli": "17.0.2",
    "@w5s/commitlint-config": "1.0.0-alpha.5",
    "@w5s/eslint-config": "1.0.0-alpha.22",
    "ajv-cli": "5.0.0",
    "cspell": "6.1.2",
    "eslint": "8.17.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.2",
    "markdown-magic": "2.6.0",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "renovate": "32.80.1"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@3.2.1"
}
