{
  "name": "@w5s/renovate-config",
  "version": "1.0.0-alpha.0",
  "private": true,
  "description": "Renovate configuration presets",
  "keywords": [
    "renovate",
    "config",
    "dependencies"
  ],
  "homepage": "https://github.com/w5s/renovate-config/blob/main#readme",
  "bugs": {
    "url": "https://github.com/w5s/renovate-config.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w5s/renovate-config.git"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "clean": ":",
    "code-analysis": ":",
    "develop": ":",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "eslint . --cache --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "eslint . --cache --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepare:githooks": "[ -n \"${CI:-}\" ] || npx husky install .githooks",
    "release": ":",
    "rescue": "git clean -fdx;yarn install",
    "test": "concurrently \"npm:test:*\"",
    "test:renovate-config": "test/test.sh",
    "test:renovate-config-schema": "ajv test -s test/schema.json -d base.json --valid",
    "validate": "npm run build && npm run lint && npm test"
  },
  "commitlint": {
    "extends": [
      "@w5s/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.js?(x)": [
      "eslint"
    ],
    "*.yml": [
      "eslint"
    ],
    "*.{json,jsonc,json5}": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@w5s/eslint-config"
    ],
    "root": true
  },
  "eslintIgnore": [
    "lib/",
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    "**/tsconfig.json",
    ".vscode/**",
    "public/"
  ],
  "devDependencies": {
    "@w5s/commitlint-config": "1.0.27",
    "@w5s/cspell-config": "1.0.8",
    "@w5s/eslint-config": "1.0.11",
    "ajv-cli": "5.0.0",
    "concurrently": "8.1.0",
    "cspell": "6.31.1",
    "eslint": "8.41.0",
    "markdown-magic": "2.6.1",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "prettier": "2.8.8",
    "renovate": "35.105.5"
  },
  "packageManager": "yarn@3.6.0",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
