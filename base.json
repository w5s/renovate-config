{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default base configuration for all W5s projects.",
  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "automerge": false,
  "dependencyDashboard": true,
  "extends": [
    ":ignoreModulesAndTests",
    ":semanticPrefixFixDepsChoreOthers",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests",
    "github>w5s/renovate-config//preset/groupRecommended",
    "github>w5s/renovate-config//preset/automergeRecommended",
    "github>w5s/renovate-config//preset/commit",
    "github>w5s/renovate-config//preset/schedule",
    "github>w5s/renovate-config//preset/ignore",
    "replacements:all",
    "workarounds:all"
  ],
  "forkProcessing": "disabled",
  "ignoreUnstable": true,
  "lockFileMaintenance": {
    "enabled": true,
    "prPriority": 1,
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "stabilityDays": 7
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor"],
      "stabilityDays": 2
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "stabilityDays": 2
    }
  ],
  "prConcurrentLimit": 20,
  "prCreation": "immediate",
  "prHourlyLimit": 0,
  "rangeStrategy": "auto",
  "rebaseWhen": "auto",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "updateNotScheduled": true,
  "platformAutomerge": true
}
