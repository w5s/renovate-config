{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge for NPM dev dependencies",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["packages:linters"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["monorepo:commitlint"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["github>w5s/renovate-config//preset/groupCSpell"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["monorepo:jest"],
      "matchPackageNames": ["es-jest", "ts-jest", "@vue/vue3-jest"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["monorepo:vitest"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["npm-run-all", "npm-run-all2", "concurrently"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchSourceUrls": ["https://github.com/yarnpkg/berry{/,}**"]
    }
  ]
}
