{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge all non-major linter package updates",
  "packageRules": [
    {
      "extends": ["packages:linters"],
      "matchPackageNames": [
        "prettier",
        "@babel/eslint-parser",
        "@commitlint/cli"
      ],
      "labels": ["AUTOMERGE"],
      "automerge": true
    },
    {
      "extends": ["github>w5s/renovate-config:preset/groupCSpell"],
      "matchPackageNames": [],
      "labels": ["AUTOMERGE"],
      "automerge": true
    }
  ]
}
