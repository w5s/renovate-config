{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge minor updates of common dev libraries",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "labels": [
        "AUTOMERGE"
      ],
      "automerge": true,
      "matchPackageNames": [
        "concurrently",
        "glob",
        "husky",
        "lerna",
        "lint-staged",
        "mrm",
        "npm-run-all",
        "nodemon",
        "patch-package",
        "release-it",
        "renovate",
        "rimraf",
        "semantic-release",
        "ts-node",
        "ts-node-dev",
        "tsconfig-paths",
        "turbo"
      ]
    }
  ]
}
