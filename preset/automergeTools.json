{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge minor updates of common dev libraries",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": [
        "concurrently",
        "glob",
        "husky",
        "is-ci",
        "lerna",
        "lint-staged",
        "mrm",
        "npm-run-all",
        "nodemon",
        "patch-package",
        "release-it",
        "renovate",
        "rimraf",
        "rollup",
        "sass",
        "semantic-release",
        "ts-node",
        "ts-node-dev",
        "tsconfig-paths",
        "turbo",
        "vite",
        "zx"
      ],
      "automerge": true
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/yarnpkg/berry"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "extends": ["monorepo:commitlint"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
