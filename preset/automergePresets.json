{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge minor updates of presets",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "matchPackagePatterns": [
        "browserslist-config$",
        "commitlint-config$",
        "eslint-config$",
        "cspell-config$",
        "prettier-config$",
        "conventional-changelog$",
        "mrm-preset$",
        "stylelint-config$",
        "ts-config$"
      ]
    }
  ]
}
