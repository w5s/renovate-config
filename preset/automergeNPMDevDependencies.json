{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge for NPM dev dependencies",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["packages:linters"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["monorepo:commitlint"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["github>w5s/renovate-config//preset/groupCSpell"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["monorepo:jest"],
      "matchPackageNames": ["es-jest", "ts-jest", "@vue/vue3-jest"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "extends": ["monorepo:vitest"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "@babel/eslint-parser",
        "@babel/core",
        "@commitlint/cli",
        "concurrently",
        "cypress",
        "esbuild",
        "glob",
        "husky",
        "is-ci",
        "lerna",
        "lint-staged",
        "mrm",
        "npm-run-all",
        "nodemon",
        "patch-package",
        "prettier",
        "release-it",
        "renovate",
        "rimraf",
        "rollup",
        "sass",
        "semantic-release",
        "typescript",
        "ts-node",
        "ts-node-dev",
        "tsconfig-paths",
        "turbo",
        "typedoc",
        "vite",
        "zx"
      ],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePatterns": [
        "browserslist-config$",
        "commitlint-config$",
        "eslint-config$",
        "cspell-config$",
        "prettier-config$",
        "conventional-changelog$",
        "mrm-preset$",
        "stylelint-config$",
        "ts-config$"
      ],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/yarnpkg/berry"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
